APP_NAME="Pasarela CyberSource"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=pasarela_cybersource
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# SESSION & CACHE
# ============================================
# ⚠️ CRÍTICO: Configuración de sesión para 3DS Challenge
# Para desarrollo (HTTP): SESSION_SAME_SITE=null
# Para producción (HTTPS): SESSION_SAME_SITE=none + SESSION_SECURE_COOKIE=true

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_SAME_SITE=null
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

# ============================================
# REDIS & MEMCACHED (Opcional)
# ============================================
MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# MAIL CONFIGURATION
# ============================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@tupasarela.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# AWS (Si se necesita)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# VITE
# ============================================
VITE_APP_NAME="${APP_NAME}"

# ============================================
# CYBERSOURCE PAYMENT GATEWAY
# ============================================

# Credenciales (obtenerlas de CyberSource Business Center)
CYBERSOURCE_MERCHANT_ID=tu_merchant_id_aqui
CYBERSOURCE_API_KEY=tu_api_key_aqui
CYBERSOURCE_API_SECRET=tu_api_secret_aqui

# Entorno
# Test: https://apitest.cybersource.com
# Producción: https://api.cybersource.com
CYBERSOURCE_BASE_URL=https://apitest.cybersource.com

# URLs de Callback
CYBERSOURCE_CHALLENGE_RETURN_URL="${APP_URL}/payment/challenge/callback"
CYBERSOURCE_SUCCESS_URL="${APP_URL}/payment/success"
CYBERSOURCE_FAILURE_URL="${APP_URL}/payment/failed"

# 3D Secure 2.2.0
CYBERSOURCE_3DS_ENABLED=true
CYBERSOURCE_3DS_VERSION=2.2.0

# Configuración de Pagos
CYBERSOURCE_DEFAULT_CURRENCY=USD
CYBERSOURCE_CAPTURE_ON_AUTH=true
CYBERSOURCE_REQUEST_TIMEOUT=30
CYBERSOURCE_ALLOWED_CURRENCIES=USD,CRC

# Logging
CYBERSOURCE_LOG_REQUESTS=true
CYBERSOURCE_LOG_RESPONSES=true
CYBERSOURCE_LOG_LEVEL=info

# ============================================
# NOTAS PARA PRODUCCIÓN
# ============================================
# 1. Cambiar SESSION_SAME_SITE=none
# 2. Agregar SESSION_SECURE_COOKIE=true
# 3. Cambiar CYBERSOURCE_BASE_URL a producción
# 4. Cambiar APP_DEBUG=false
# 5. Habilitar HTTPS (certificado SSL válido)